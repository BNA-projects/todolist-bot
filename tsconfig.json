{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./",

    "target": "ES2022",

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
