{
  "compilerOptions": {
    // Output folders
    "outDir": "./dist",
    "rootDir": "./src",

    // Language & module settings
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],

    // Source maps and declarations
    "sourceMap": true,
    "declaration": true,

    // Disable JSX (not needed for bot)
    "jsx": "preserve"
  },
  "include": ["src"]
}
